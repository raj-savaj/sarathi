<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/loginbg"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo" />

    <RelativeLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/eklg"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_39sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_24ssp"
            android:text="`e mtth:te lttdthef NthtVe\nmtnfthe btkzGe jte."/>

        <ImageView
            android:layout_below="@+id/main_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_44sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/logo_white" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to SSNSM.."
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#fe5a3f"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/nunitosansbold"
                />
            <TextView
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Login Portal"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="@font/nunitosansbold"
                />

            <TextView
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#f9b3a7"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/nunitosansregular"
                />
            <EditText
                android:id="@+id/inuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-9dp"
                android:backgroundTint="#625550"
                android:fontFamily="@font/nunitosansregular"
                android:textColor="#333333"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginBottom="0dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                />
            <TextView
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:paddingLeft="@dimen/_3sdp"
                android:textColor="#f9b3a7"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/nunitosansregular"
                />
            <EditText
                android:id="@+id/inpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/_8sdp"
                android:backgroundTint="#625550"
                android:inputType="textPassword"
                android:maxLines="1"
                android:fontFamily="@font/nunitosansregular"
                android:textColor="#333333"
                android:imeOptions="actionDone"
                android:layout_marginTop="-9dp"
                android:layout_marginBottom="0dp"
                />

            <ImageView
                android:id="@+id/btnlogin"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35ssp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:clickable="true"
                android:padding="0dp"
                android:src="@drawable/signin" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>